{
  "name": "designerae-starter",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",

    // --- GitHub Pages (static export) ---
    "export": "next build && next export",
    "preview:static": "npx serve out -l 3000",

    // Option A: simple manual deploy using git subtree (no extra deps)
    "deploy": "npm run export && bash -lc 'touch out/.nojekyll && git checkout -B gh-pages && git add -f out && git commit -m \"deploy\" || true && git subtree push --prefix out origin gh-pages'"

    // Option B: if you prefer the gh-pages package, add:
    // "predeploy:gh": "npm run export && touch out/.nojekyll",
    // "deploy:gh": "gh-pages -d out -b gh-pages"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@types/node": "24.9.1",
    "@types/react": "19.2.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.2"
  }
}
